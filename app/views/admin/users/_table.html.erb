<table class="table">
  <!-- head -->
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Role</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <!-- row -->
    <% users.each do |user| %>
        <tr>
          <td>
            <div class="flex items-center gap-3">
              <div class="avatar placeholder">
                <div class="bg-neutral text-neutral-content w-10 rounded-full">
                    <span><%= user.full_name.first.upcase %></span>
                </div>
              </div>
              <div>
                <div class="font-bold"><%= user.full_name %></div>
                <div class="text-sm opacity-50">United States</div>
              </div>
            </div>
          </td>
          <td>
              <span><%= user.email %></span>
          </td>
          <td>Admin</td>
          <th>
              <div class="tooltip" data-tip="View user">
                  <button class="btn btn-ghost btn-xs">
                      <%= lucide_icon 'eye', class: 'w-5 h-5' %>
                  </button>
              </div>
          </th>
        </tr>
    <% end %>
  </tbody>
</table>
