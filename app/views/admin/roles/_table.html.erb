<table class="table">
  <!-- head -->
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created at</th>
      <th>Updated at</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <!-- row -->
    <% roles.each do |role| %>
        <tr>
          <td>
            <div class="font-bold"><%= role.name %></div>
          </td>
          <td><%= role.description ? truncate(role.description, length: 15, omission: '...') : "-" %></td>
          <td><%= role.created_at.strftime("%B %d, %Y") %></td>
          <td><%= role.updated_at.strftime("%B %d, %Y") %></td>
          <th>
              <div class="tooltip" data-tip="View role">
                  <button class="btn btn-ghost btn-xs">
                      <%= lucide_icon 'eye', class: 'w-5 h-5' %>
                  </button>
              </div>
          </th>
        </tr>
    <% end %>
  </tbody>
</table>
