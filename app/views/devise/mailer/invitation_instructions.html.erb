<div class="container mx-auto p-6 bg-base-100 text-base-content">
  <div class="card bg-base-200 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-4"><%= t("devise.mailer.invitation_instructions.hello", email: @resource.email) %></h2>

      <p class="mb-4"><%= t("devise.mailer.invitation_instructions.someone_invited_you", url: root_url) %></p>

      <div class="mb-6">
        <%= link_to t("devise.mailer.invitation_instructions.accept"),
                    accept_invitation_url(@resource, invitation_token: @token),
                    class: "btn btn-primary" %>
      </div>

      <% if @resource.invitation_due_at %>
        <p class="text-sm mb-4">
          <%= t("devise.mailer.invitation_instructions.accept_until",
                due_date: l(@resource.invitation_due_at,
                format: :'devise.mailer.invitation_instructions.accept_until_format')) %>
        </p>
      <% end %>

      <div class="divider"></div>

      <p class="text-sm text-base-content/70">
        <%= t("devise.mailer.invitation_instructions.ignore") %>
      </p>
    </div>
  </div>
</div>
